{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "strict": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-multiple-empty-lines": [
            "error",
            { 
                "max": 5,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "camelcase": "off",
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": { "multiline": true, "minProperties": 0 },
                "ObjectPattern": { "multiline": false },
                "ImportDeclaration": "never",
                "ExportDeclaration": { "multiline": true, "minProperties": 3 }
            }
        ],
        "no-restricted-globals": "off",
        "eol-last": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "arrow-parens": [
            "error",
            "as-needed", { "requireForBlockBody": true }
        ]
    }
}